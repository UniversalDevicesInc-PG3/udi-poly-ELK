<nodeDefs>
    <!-- NODE DEF from 5.0 document http://wiki.universal-devices.com/index.php?title=V50_MAIN -->
    <!-- controller, this must mach the id in your Controller class-->
    <nodeDef id="controller" nls="ctl">
        <editors />
        <sts>
			<st id="ST" editor="bool" />
      <st id="GV1" editor="bool" />
		</sts>
        <cmds>
            <sends />
            <accepts>
              <cmd id="QUERY" />
              <cmd id="DISCOVER" />
              <cmd id="UPDATE_PROFILE" />
            </accepts>
        </cmds>
    </nodeDef>

    <!-- area -->
    <nodeDef id="area" nls="area">
        <editors />
        <sts>
            <!-- status -->
            <st id="ST" editor="astatus" />
        </sts>
        <cmds>
            <sends>
              <cmd id="DON" />
              <cmd id="DOF" />
            </sends>
            <accepts>
            </accepts>
        </cmds>
    </nodeDef>


  	<!-- zone -->
    <nodeDef id="zone" nls="zone">
        <editors />
        <sts>
            <!-- status -->
            <st id="ST" editor="zstate" />
            <!-- input state -->
            <st id="GV0" editor="zstaus" />
            <!-- enabled -->
            <st id="GV1" editor="bool" />
            <!-- area -->
            <st id="GV2" editor="area" />
            <!-- definition type -->
            <st id="GV3" editor="ztype" />
            <!-- alarm configuration -->
            <st id="GV4" editor="zalarm" />
            <!-- DON/DOF Config -->
            <st id="GV5" editor="zdconf" />
        </sts>
        <cmds>
            <sends>
              <cmd id="DON" />
              <cmd id="DOF" />
            </sends>
            <accepts>
              <cmd id="GV5">
                <p id="" editor="zdconf" init="GV5" />
              </cmd>
            </accepts>
        </cmds>
    </nodeDef>
</nodeDefs>
